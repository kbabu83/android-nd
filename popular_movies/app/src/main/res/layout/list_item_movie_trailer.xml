<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_movie_trailer"
    android:orientation="horizontal"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <ImageView android:id="@+id/thumbnail_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/txt_trailer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trailer"
        android:textStyle="bold" android:textSize="16sp"
        android:layout_gravity="center_vertical" android:layout_marginLeft="20dp" />

</LinearLayout>
